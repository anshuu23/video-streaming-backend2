generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  userName     String
  userEmail    String     @unique
  userPassword String
  photos       Photos[]
  comments     Comments[]
  photoLikes   PhotoLikes[]
}

model Photos {
  id        String     @id @default(uuid())
  photo     String
  photoTitle String
  photoDesc String
  photoTags String[]
  likes     Int @default(0)
  userId    String
  user      User       @relation(fields: [userId], references: [id])
  comments  Comments[]
  photoLikes PhotoLikes[]
}

model Comments {
  id      String   @id @default(uuid())
  comment String
  time    DateTime @default(now())
  likes   Int @default(0)
  photoId String
  userId String
  photos  Photos   @relation(fields: [photoId], references: [id])
  users   User   @relation(fields: [userId], references: [id])
}

model PhotoLikes{
  id      String   @id @default(uuid())
  time    DateTime @default(now())
  photoId String
  userId String
  photos  Photos   @relation(fields: [photoId], references: [id])
  users   User   @relation(fields: [userId], references: [id])

  @@unique([userId , photoId])
}
